.layout {
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.infoCard {
  margin-top: 30rpx;
  width: 90%;
  height: 400rpx;
  background-color: white;
  border-radius: 30rpx;
}
.infoCard .title {
  font-size: 40rpx;
  font-weight: 550;
  padding-left: 30rpx;
  padding-top: 20rpx;
}
.secBox .star {
  padding-left: 25rpx;
}
.secBox .star image {
  height: 30rpx;
  width: 30rpx;
  margin-right: 5rpx;
}
.secBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.secBox .price {
  font-size: 20rpx;
  padding-left: 10rpx;
}
.secBox .mark {
  padding-bottom: 3rpx;
  padding-left: 5rpx;
}
.secBox .left {
  display: flex;
  align-items: center;
}
.secBox .commentCount {
  font-size: 20rpx;
  padding-right: 10rpx;
}
.picList {
  display: flex;
  width: 97%;
  padding-left: 20rpx;
}
.picList scroll-view {
  display: flex;
  white-space: nowrap;
  margin-top: 30rpx;
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.wrapper .img {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  background-color: white;
}
.wrapper .img .cross {
  position: absolute;
  right: -18rpx;
  top: -18rpx;
}
.commentCountLayout {
  display: flex;
  width: 90%;
  margin-top: 20rpx;
}
.commentCountLayout .title {
  flex-direction: column;
  align-items: center;
  display: flex;
}
.commentCountLayout .title .text {
  font-size: 40rpx;
  font-weight: 600;
}
.commentCountLayout .title .count {
  font-size: 20rpx;
  color: #6d6d6d;
}
.commentCountCard {
  width: 90%;
  min-height: 600rpx;
  background-color: white;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.list {
  display: flex;
  flex-direction: column;

}
.list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.list .item .info {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list .item .info .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 30rpx;
}
.list .item .info .name {
  font-size: 20rpx;
  margin-left: 20rpx;
}
.list .item .info .star {
  position: absolute;
  display: flex;
  top: 45rpx;
  margin-left: 20rpx;
}
.list .item .info .star image {
  width: 20rpx;
  height: 20rpx;
}
.list .item .info .time {
  font-size: 20rpx;
  margin-right: 10rpx;
}
.list .item .content {
  width: 90%;
}
.list .item .content .text {
  font-size: 25rpx;
}