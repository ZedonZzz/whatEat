/* pages/restList/index.wxss */
.layout {
  height: 100%;
  height: 100%;
  background-color: #f6f6f6;
}
.select {
  display: flex;
  align-items: center;
  font-weight: 550;
  background-color: white;
}
.restList {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.restList .cardItem {
  width: 93%;
  height: 250rpx;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.restList .cardItem .img {
  margin-left: 25rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.restList .cardItem .img .item {
  width: 200rpx;
  height: 200rpx;
  background-color: black;
  border-radius: 10rpx;
}
.restList .cardItem .info {
  height: 200rpx;
  width: 500rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin-left: 20rpx;
  margin-top: 25rpx;
}
.restList .cardItem .info .title {
  font-weight: 600;
}
.restList .cardItem .info .secBox {
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.restList .cardItem .info .comment {
  min-width: 200rpx;
  height: 40rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fae5d8;
  font-size: 28rpx;
}
.restList .cardItem .info .tasteList {
  display: flex;
}
.restList .cardItem .info .tasteList .item {
  font-size: 20rpx;
  color: #c26959;
  border: 1rpx solid #c26959;
  border-radius: 8rpx;
  min-width: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}