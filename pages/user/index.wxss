.layout  {
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}
.t-icon {
  width: 50rpx;
  height: 50rpx;
}
.userInfo {
  position: relative;
  width: 100%;
  height: 350rpx;
  background-color: #ffbe0a;
  display: flex;
}
.userInfo .bg_ware {
  position: absolute;
  left: 0;
  bottom: -2rpx;
  width: 100%;
  mix-blend-mode: screen;
  height: 120rpx;
}
.userInfo .avatar {
  width: 30%;
  height: 150rpx;
  border-radius: 50%;
}
.userInfo .avatar image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin: 40rpx;
}
.userInfo .info {
  margin-top: 60rpx;
}
.userInfo .info .userName {
  font-size: 35rpx;
}
.userInfo .info .uid {
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #686868;
}
.functionList {
  width: 100%;
  margin-top: 40rpx;
}
.functionList .item .titleBox {
  display: flex;
  align-items: flex-start;
}
.functionList .item {
  background-color: white;
  justify-content: space-between;
  display: flex;
  align-items: center;
  height: 80rpx;
  margin-top: 15rpx;
}
.functionList .item .titleBox .icon {
  margin-left: 5rpx;
}
.functionList .item .titleBox .title {
  margin-left: 10rpx;
  margin-top: 3rpx;
}